{{!-- game is the current iteration of the games collection from the api --}}
{{#each games as |game|}}
  <section data-id={{game._id}} class="game">
    <h3 class="player-name">{{game.owner.nickname}}</h3>
    <p class="game-scoreDate">{{limit game.createdAt 10}}</p>
    <h5 class="game-score">{{game.score}}</h5>
  </section>
{{/each}}